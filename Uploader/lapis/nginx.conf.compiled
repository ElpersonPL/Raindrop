env LAPIS_ENVIRONMENT=production;
worker_processes 1;
error_log stderr notice;
daemon off;
pid logs/nginx.pid;
env DOMAIN=${{DOMAIN}}; # yes
events {
  worker_connections 1024;
}

http {
  include mime.types;
  resolver 127.0.0.11;
  resolver_timeout 10s;
  server {
    listen 8080;
    server_name ${DOMAIN}
    access_log off;
    lua_code_cache off;
    client_max_body_size 100M;
    location / {
      default_type text/html;
      autoindex on;
	  content_by_lua_block {
        require("lapis").serve("app")
      }
    
	location /files/ {
	 internal;
	}

	

 }

    location /static/ {
      alias static/;
    }

    location /favicon.ico {
      alias static/favicon.ico;
    }
  }
}
